    <style name="Sty_PassHome">
        <item name="android:fontFamily">sans-serif-ligth</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/Col_font0</item>
        <item name="android:textSize">20sp</item>


